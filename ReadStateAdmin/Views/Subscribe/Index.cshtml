@model List<RealEstateAdmin.Models.ModelDtos.RBAC.SubscribeDto>
@{
    ViewData["Title"] = RealEstateAdmin.Resources.Text.Subscribe + " " + RealEstateAdmin.Resources.Text.List;
}

@*<h2>Index</h2>*@

@section PageMap{
    <!-- Page-Header-->
    <div class="page-header">
        <h4 class="page-title">@RealEstateAdmin.Resources.Text.Subscribe @RealEstateAdmin.Resources.Text.List</h4>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="~/">@RealEstateAdmin.Resources.Text.Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">@RealEstateAdmin.Resources.Text.Subscribe @RealEstateAdmin.Resources.Text.List</li>
        </ol>
    </div>
    <!--/Page-Header-->
}


<div class="row">
    <div class="col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">@RealEstateAdmin.Resources.Text.Subscribe</div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered grid">
                        <thead>
                            <tr>
                                <th class="wd-15p">@RealEstateAdmin.Resources.Text.Email</th>
                                <th class="wd-25p">@RealEstateAdmin.Resources.Text.Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Email </td>
                                    <td class="action">
                                        <span class="fa fa-trash-o" data-propertyId="@item.Id" onclick="publish('delete-'+@item.Id,'@RealEstateAdmin.Resources.Text.AreYouSure');" style="color: red;" data-toggle="tooltip" data-placement="top" title="" data-original-title="@RealEstateAdmin.Resources.Text.DeleteThisItem"></span>
                                        <form action="~/Subscribe/Delete" method="post" style="display: inline-block" id="delete-@item.Id">
                                            <input type="hidden" name="id" value="@item.Id" />
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function publish(id, ttext) {
        if (confirm(ttext)) {
            document.getElementById(id).submit();
        }
    }
</script>