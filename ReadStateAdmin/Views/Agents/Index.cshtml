@model List<RealEstateAdmin.Models.ModelDtos.Organization.AgentListDto>
@{
    ViewData["Title"] = RealEstateAdmin.Resources.Text.AgentsList;
}

<div class="side-app">

    <!-- Page-Header-->
    <div class="page-header">
        <h4 class="page-title">@RealEstateAdmin.Resources.Text.AgentsList</h4>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="~/">@RealEstateAdmin.Resources.Text.Home</a></li>

            <li class="breadcrumb-item active" aria-current="page">@RealEstateAdmin.Resources.Text.AgentsList</li>
        </ol>
    </div>
    <!--/Page-Header-->

    <div class="row">

        <div class="col-md-12 col-lg-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">@RealEstateAdmin.Resources.Text.AgentsList</div>
                    <div class="new-button-ontable"> <a class="btn btn-info btn-sm" href="~/agents/create"> <i class="fa fa-plus"></i> @RealEstateAdmin.Resources.Text.New @RealEstateAdmin.Resources.Text.Agent</a></div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="hover table-bordered border-top-0 border-bottom-0 grid">
                            <thead>
                                <tr>
                                    <th>@RealEstateAdmin.Resources.Text.Username</th>
                                    <th>@RealEstateAdmin.Resources.Text.Firstname</th>
                                    <th>@RealEstateAdmin.Resources.Text.Lastname</th>
                                    <th>@RealEstateAdmin.Resources.Text.Email</th>
                                    <th>@RealEstateAdmin.Resources.Text.Phone</th>
                                    <th>@RealEstateAdmin.Resources.Text.Address</th>
                                    <th>@RealEstateAdmin.Resources.Text.Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.UserName</td>
                                        <td>@item.FirstName</td>
                                        <td>@item.LastName </td>
                                        <td>@item.Email </td>
                                        <td>@item.Phone01</td>
                                        <td>@item.Address01</td>
                                        <td>
                                            <a href="~/agents/edit/@item.UserAccountId"><span class="fa fa-pencil-square-o"></span></a>

                                            <a href="#" onclick="deleteItem('deletefrom-'+@item.Id);" data-toggle="tooltip" data-placement="top" title="" data-original-title="@RealEstateAdmin.Resources.Text.DeleteThisItem"><span class="fa fa-trash text-primary m-2" style="font-size:14pt;"></span></a>
                                            <form action="~/agents/delete" method="post" id="deletefrom-@item.Id">
                                                <input type="hidden" name="id" value="@item.Id" />
                                            </form>
                                        </td>
                                    </tr>

                                }

                            </tbody>
                            @*
                                <tfoot>
                                    <tr>
                                        <th>Name</th>
                                        <th>Position</th>
                                        <th>Office</th>
                                        <th>Age</th>
                                        <th>Start date</th>
                                        <th>Salary</th>
                                    </tr>
                                </tfoot>*@
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function deleteItem(id) {
        if (confirm('@RealEstateAdmin.Resources.Text.AreYouSure')) {
            document.getElementById(id).submit();
        }
    }
</script>